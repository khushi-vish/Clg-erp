<div class="sidebar">
  <div class="profile-section">
    <% if (user && user.profilePicture) { %>
    <img src="<%= user.profilePicture %>" alt="Profile Image" />
    <% } else { %>
    <img src="https://placehold.co/100x100" alt="Profile Image" />
    <% } %>
    <h3><%= role.charAt(0).toUpperCase() + role.slice(1) %></h3>
  </div>

  <div class="sidebar-links">
    <a
      href="/admin/dashboard"
      class="<%= currentRoute === '/admin/dashboard' ? 'active' : '' %>"
    >
      <i class="fas fa-home"></i>
      Dashboard
    </a>
    <a
      href="/admin/profile"
      class="<%= currentRoute === '/admin/profile' ? 'active' : '' %>"
    >
      <i class="fas fa-user-edit"></i>
      Profile
    </a>
    <a
      href="/admin/course/add"
      class="<%= currentRoute === '/admin/course/add' ? 'active' : '' %>"
    >
      <i class="fas fa-plus-circle"></i>
      Add Course
    </a>
    <a href="#">
      <i class="fas fa-tasks"></i>
      Manage Course
    </a>
    <a
      href="/admin/subject/add"
      class="<%= currentRoute === '/admin/subject/add' ? 'active' : '' %>"
    >
      <i class="fas fa-plus-circle"></i>
      Add Subject
    </a>
    <a href="#">
      <i class="fas fa-tasks"></i>
      Manage Subject
    </a>
    <a
      href="/admin/student/add"
      class="<%= currentRoute === '/admin/student/add' ? 'active' : '' %>"
    >
      <i class="fas fa-user-plus"></i>
      Add Student
    </a>
    <a href="#">
      <i class="fas fa-users-cog"></i>
      Manage Student
    </a>
    <a
      href="/admin/teacher/add"
      class="<%= currentRoute === '/admin/teacher/add' ? 'active' : '' %>"
    >
      <i class="fas fa-chalkboard-teacher"></i>
      Add Teacher
    </a>
    <a href="#">
      <i class="fas fa-users-cog"></i>
      Manage Teacher
    </a>
    <a href="#">
      <i class="fas fa-bell"></i>
      Notification
    </a>
    <a href="/logout">
      <i class="fas fa-sign-out-alt"></i>
      Logout
    </a>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
  </div>
</div>
