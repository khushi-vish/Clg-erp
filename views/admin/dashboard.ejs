<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= role %> Dashboard</title>
    <link rel="stylesheet" href="/dashboard.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
      integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body>
    <%- include("include/sidebar.ejs") %>

    <div class="container">
      <div class="header">
        <h1><%= role.charAt(0).toUpperCase() + role.slice(1) %> Dashboard</h1>
        <form action="/logout" method="GET">
          <button type="submit" class="logout-btn">Logout</button>
        </form>
      </div>

      <% if (error) { %>
      <div class="card" style="color: red"><%= error %></div>
      <% } %>

      <!-- admin dashboard -->
      <% if (role === 'admin') { %>
      <div class="card">
        <h2>Welcome, Admin</h2>
        <p>You have full access to manage the college ERP system.</p>
      </div>

      <div class="card-collection">
        <div class="card students-card">
          <i class="fas fa-user-graduate"></i>
          <h3>Total Students</h3>
          <div class="stat-card"><%= stats.students %></div>
        </div>
        <div class="card teachers-card">
          <i class="fas fa-chalkboard-teacher"></i>
          <h3>Total Teachers</h3>
          <div class="stat-card"><%= stats.teachers %></div>
        </div>
        <div class="card courses-card">
          <i class="fas fa-book"></i>
          <h3>Total Courses</h3>
          <div class="stat-card"><%= stats.courses %></div>
        </div>
        <div class="card subjects-card">
          <i class="fas fa-book-open"></i>
          <h3>Total Subjects</h3>
          <div class="stat-card"><%= stats.subjects %></div>
        </div>
      </div>

      <% } %>
    </div>
  </body>
</html>
